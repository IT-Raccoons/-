#include <iostream>
using namespace std;
int main()
{
	ios::sync_with_stdio(false);
	int x,y,c=0;
	cin>>x>>y;
	int a[x][y];
	char v;
    for (int i=0; i<x;i++){
		for (int j=0;j<y;j++){
			cin>> v;
			if (v=='.')
		    	a[i][j]=0;
			else
			    a[i][j]=1; 
		}
	}
	for (int i=1; i<x;i++){
		for (int j=0;j<y;j++){
		    if ((a[i][j]==0) && (a[i-1][j]==0) && (a[i+1][j]==0) && (a[i][j-1]==0) && (a[i][j+1]==0))
			    c++;
		}
	}
	cout<<c;
	return 0;
}
