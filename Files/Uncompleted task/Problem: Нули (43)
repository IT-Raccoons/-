#include <iostream>
#include <string>
using namespace std;
int main() {
	/* Переменные */
	string number;
	int weight, count = 0, iscycle = 0, max = 0, zero = 0, one = 1;
	/* Начало программы */
	cin >> number;
	weight = number.size();
	for (int i = 0; i < weight; i++) {
		if ((int)number.at(i) > zero) {
			count = 0;
			iscycle = 0;
			cout << "Were 1";
		}
		if ((int)number.at(i) == 0 && iscycle > zero) {
			count += 1;
			cout << "Were 2";
		}
		if ((int)number.at(i) == 0 && iscycle == zero) {
			iscycle = 1;
			count =+ 1;
			cout << "Were 3";
		}
		if (max < count) {
			max = count;
			cout << "Were 4";
		}
	}
	cout << max << endl;
	return 0;
}
