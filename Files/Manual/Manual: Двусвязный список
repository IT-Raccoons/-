#include <iostream>
using namespace std;

class Node {
public:
	int Value;
	Node* Left;
	Node* Right;
	Node() {
		Left = NULL;
		Right = NULL;
	}
};

class List {
public:
	Node* Head;
	Node* Tail;
	List() {
		Head = NULL;
		Tail = NULL;
	}
	void PushFront(int val) {
		if (Head == NULL) {
			Head = new Node();
			Head -> Value = val;
			Tail = Head;
		}
		else {
			Node* tmp = new Node();
			tmp -> Value = val;
			tmp -> Right = Head;
			Head -> Left = tmp;
			Head = tmp;
		}
	}
	void Insert(Node* Prev, int val) {
		if (Prev == NULL)
			PushFront(val);
		else {
			Node* tmp = new Node();
			tmp -> Value = val;
			tmp -> Left = Prev;
			tmp -> Right = Prev -> Right;
			Prev -> Right = tmp;
			if (tmp -> Right) {
				tmp -> Right -> Left = tmp;
			}
			else {
				Tail = tmp;
			}
		}
	}
	void Delete(Node* Elem) {
		if (Elem -> Left) {
			Elem -> Left -> Right = Elem -> Right;
		}
		else {
			Head = Elem -> Right;
		}
		if (Elem -> Right) {
			Elem -> Right -> Left = Elem -> Left;
		}
		else {
			Tail = Elem -> Left;
		}
		delete Elem;
	}
	void PrintList() {
		for (Node* it = Head; it != NULL; it = it -> Right) {
			cout << it -> Value << " ";
		}
		cout << endl;
	}
};

int main() {
	// Примеры ввода
	List a;
	//a.PushFront(3);
	//a.Delete(a.Head);
	//a.PrintList();
	//a.Insert(a.Tail, 3);
	return 0;
}

/* Список команд и их действие
List (название переменной) - создание листа
(название переменной).PushFront(значение) - добавление элемента в начало листа
(название переменной).Insert(место в листе, значение) - добавление элемента в определенное место листа (поддерживает Head - начало листа, Tail - конец листа и Head -> Right/Left и тд)
(название переменной).Delete(место в листе) - Удаление элемента в определенном месте листа
(название переменной).PrintList() - вывод листа в консоль
*/
